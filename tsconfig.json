{  
  "compilerOptions": {  
    "allowImportingTsExtensions": true,  
    "noEmit": true,  
    "target": "esnext",  
    "module": "esnext", 
    "moduleResolution": "node", 
    "jsx": "react-jsx", 
    "strict": true,  
    "esModuleInterop": true,  
    "skipLibCheck": true,  
    "resolveJsonModule": true,  
    "baseUrl": "./",  
    "paths": {  
      "*": ["node_modules/*", "src/types/*"]  
    },  
    "types": ["telegram-webapps"] 
  },  
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "**/*.spec.ts"]  
}